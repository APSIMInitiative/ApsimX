  {
	image
    {
      function			= BOX
      state			= NORMAL
      file			= "Buttons/button-normal.png"
      border			= { 4, 4, 4, 4 }
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      state			= PRELIGHT
      file			= "Buttons/button-hover.png"
      border			= { 4, 4, 4, 4 }
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      state			= ACTIVE
      file			= "Buttons/button-default.png"
      border			= { 4, 4, 4, 4 }
      stretch			= TRUE
    }	
    image 
    {
      function			= BOX
      state			= INSENSITIVE
      file			= "Buttons/button-insensitive.png"
      border			= { 4, 4, 4, 4 }
      stretch			= TRUE
